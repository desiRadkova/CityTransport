@model CityTransport.Models.UserModels.ChargeCardModel
<!DOCTYPE html>
<html>
<head>
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
    <meta content="utf-8" http-equiv="encoding">
    <link rel="shortcut icon" href="~/frontEnd/images/tram.png" />
    <title>City Transport-Charge Card Page</title>
    <!--CSS files-->
    <link rel="stylesheet" href="~/frontEnd/css/main.css">
    <link rel="stylesheet" href="~/frontEnd/css/bootstrap.min.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!--Background Image-->
    <div style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('../../frontEnd/images/white_background.jpg') center center no-repeat; background-size: cover;"></div>
    <!-- Navigation -->
    <!--Container-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <!--Logo-->
            <a class="navbar-brand" href="UserHomePage.html">
                <div style="padding-left: 20px;"><img src="~/frontEnd/images/tram_user.png" alt="Logo" width="70" height="67"></div><div style="padding-top: 10px;">City Transport</div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="UserHomePage">
                            My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="SpecialOffers">Special Offers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="MyInvoices">My Invoices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="MyCard">My Card</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-user-info">
        <!--User Container-->
        <div class="user-info">
            <br>
            <h1>Charge Card</h1><br>

            @if (ViewData["InfoNotTextAll"] != null)
            {
                    <p class="error" style="color: #460E74; ">@ViewData["InfoNotTextAll"].ToString()</p><br></br>  
            }
            @if (ViewData["InfoNotTextOne"] != null)
            { 
                    <p class="error" style="color: #460E74; ">@ViewData["InfoNotTextOne"].ToString()</p><br></br> 
            }

            <div class="drop-down">


                <p class="label-name">Transport Kind:</p><br>
                <!-- <select asp-for="@@Model.TransportKind@@" class="select-css">
            <option value="">Select Transport Kind</option>
            <option value="All Kind">All Kind</option>
            <option value="One Kind">One Kind</option>
        </select>-->
                @Html.DropDownList("url", new SelectList(new[]{
new SelectListItem { Text = "All Kind", Value = Url.Action("ViewOrder", "Users") },
new SelectListItem { Text = "One Kind", Value = Url.Action("ChargeCardOneKind", "Users") },}, "Value", "Text"),
"Select Transport Kind", new { id = "urlId" })

                <br>
                @if (ViewData["Error"] != null)
                {
                    <div class="drop-down" style="color: #DB0400; ">
                        <p class="error"> @ViewData["Error"].ToString()</p>
                    </div>
                }
            </div>



        </div>

        <!--JavaScript files-->

        <script type="text/javascript" src="~/frontEnd/javaScript/jquery.slim.js"></script>
        <script type="text/javascript" src="~/frontEnd/javaScript/bootstrap.bundle.min.js"></script>
        <script type="text/javascript">
    $(function () {
        $('#urlId').change(function () {
            var url = $(this).val();
            if (url != null && url != '') {
                window.location.href = url;
            }
        });
    });
</script>
</body>





</html>