@model CityTransport.Models.UserModels.UserHomePageModel
<!DOCTYPE html>
<html>
<head>
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
    <meta content="utf-8" http-equiv="encoding">
    <link rel="shortcut icon" href="~/frontEnd/images/tram.png" />
    <title>City Transport-User Home Page</title>
    <!--CSS and other files-->
    <link rel="stylesheet" href="~/frontEnd/css/main.css">
    <link rel="stylesheet" href="~/frontEnd/css/bootstrap.min.css">
    <script type='text/javascript' src='https://code.jquery.com/jquery-1.12.0.min.js'></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!--Background Image-->
    <div style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('../../frontEnd/images/white_background.jpg') center center no-repeat; background-size: cover;"></div>
    <!-- Navigation -->
    <!--Container-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <!--Logo-->
            <a class="navbar-brand" href="UserHomePage">
                <div style="padding-left: 20px;"><img src="~/frontEnd/images/tram_user.png" alt="Logo" width="70" height="67"></div><div style="padding-top: 10px;">City Transport</div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="UserHomePage">
                            My Profile
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="SpecialOffers">Special Offers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="MyInvoices">My Invoices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="MyCard">My Card</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-user-info">
        <!--User Container-->
        <div class="user-info">
            <br>

            @if (Model.Gender == "Male")
            {
                <img src="~/frontEnd/images/male1.png" alt="User Icon" width="150" height="145"><br>
            }
            else
            {
                <img src="~/frontEnd/images/female.png" alt="User Icon" width="150" height="145"><br>
            }
            @if (DateTime.Today == Model.NotificationDay.Date)
            {
                <script>
                    $(document).ready(function () {
                        alert('Your Card is going to Expire in three days!');
                    });
                </script>
            }
            @if (DateTime.Today == Model.NotificationTwoDay.Date)
            {
                <script>
                    $(document).ready(function () {
                        alert('Your Card is going to Expire in two days!');
                    });
                </script>
            }
            @if (DateTime.Today == Model.NotificationThreeDay)
            {
                <script>
                    $(document).ready(function () {
                        alert('Your Card is going to Expire in three days!');
                    });
                </script>
            }

            <h1>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1><br>
            <div class="role-info">
                <p class="label-name">Role</p><h4 class="label-detail"> @Html.DisplayFor(model => model.Role)</h4>
            </div>
            <div class="city-info">
                <p class="label-name">City</p> <h4 class="label-detail">@Html.DisplayFor(model => model.City)</h4>
            </div>
            <div class="gender-info">
                <p class="label-name">Gender</p> <h4 class="label-detail">@Html.DisplayFor(model => model.Gender)</h4><br>
                <p class="label-name">Card End Date</p> <h4 class="label-detail">@Model.EndDate.ToShortDateString()</h4>
            </div>
            <div class="email-info">
                <p class="label-name">Email</p> <h4 class="label-detail">@Html.DisplayFor(model => model.Email)</h4>
            </div>
            <div class="gender-info">

            </div>
            <br>

            <a class="button" href="ChargeCard">Charge Card</a></br></br>
            <a class="button" href="ChangeInformation">Change Information</a></br>
        </div>
        </div>

    <!--JavaScript files-->
    

    <script type="text/javascript" src="~/frontEnd/javaScript/jquery.slim.js"></script>
    <script type="text/javascript" src="~/frontEnd/javaScript/bootstrap.bundle.min.js"></script>
</body>
</html>