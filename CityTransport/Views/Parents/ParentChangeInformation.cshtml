@model CityTransport.Models.ParentModels.ParentChangeInformationModel
<!DOCTYPE html>
<html>
<head>
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
    <meta content="utf-8" http-equiv="encoding">
    <link rel="shortcut icon" href="~/../frontEnd/images/tram.png" />
    <title>City Transport-Change Information Page</title>
    <!--CSS files-->
    <link rel="stylesheet" href="~/../frontEnd/css/parent-main.css">
    <link rel="stylesheet" href="~/../frontEnd/css/bootstrap.min.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!--Background Image-->
    <div style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('../../images/white_background.jpg') center center no-repeat; background-size: cover;"></div>
    <!-- Navigation -->
    <!--Container-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <!--Logo-->
            <a class="navbar-brand" href="ParentUserHomePage">
                <div style="padding-left: 20px;"><img src="~/../frontEnd/images/tram_green.png" alt="Logo" width="70" height="67"></div><div style="padding-top: 10px;">City Transport</div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="ParentUserHomePage">
                            My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="ParentSpecialOffers">Special Offers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="ParentMyInvoices">My Invoices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="ParentMyCard">My Card</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="ParentChildrenCard">Children Card</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-user-info">
        <!--User Container-->
        <div class="user-info">
            <br>
            <h1>Change Information</h1><br>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <p class="label-name">First Name:</p><br>
                <input asp-for="@Model.FirstName" type="text" value=@Model.FirstName class="input" placeholder="@Html.DisplayFor(model => model.FirstName)" /><br><br>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                <p class="label-name">Last Name:</p><br>
                <input asp-for="@Model.LastName" type="text" value=@Model.LastName class="input" placeholder="@Html.DisplayFor(model => model.LastName)" /><br><br>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>

                <div class="drop-down">
                    <p class="label-name">City:</p>
                    <select asp-for="@Model.City" class="select-css">
                        <option value="">City Name</option>
                        <option value="Sofia">Sofia</option>
                        <option value="Varna">Varna</option>
                        <option value="Burgas">Burgas</option>
                    </select>
                    <p class="label-name">Gender:</p>
                    <select asp-for="@Model.Gender" value=@Model.Gender class="select-css">
                        <option value="">Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <p class="label-name">Role:</p>
                    <select asp-for="@Model.Role" value=@Model.Role class="select-css">
                        <option value="">Role</option>
                        <option value="Adult">Adult</option>
                        <option value="Student">Student</option>
                        <option value="University Student">University Student</option>
                        <option value="Retired">Retired</option>
                        <option value="Parent">Parent</option>
                    </select>
                </div><br><br>
                <p class="label-name">Email:</p><br>
                <input asp-for="@Model.Email" type="text" value=@Model.Email class="input" /><br><br>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <br>
                <div class="drop-down">
                    <button class="button" type="submit">Save</button>
                </div>
            </form>
        </div>

        <!--JavaScript files-->

        <script type="text/javascript" src="~/../frontEnd/javaScript/jquery.slim.js"></script>
        <script type="text/javascript" src="~/../frontEnd/javaScript/bootstrap.bundle.min.js"></script>
</body>





</html>