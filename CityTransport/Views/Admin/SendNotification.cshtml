@model CityTransport.Models.AdminModels.SendNotificationModel
<!DOCTYPE html>
<html>
<head>
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
    <meta content="utf-8" http-equiv="encoding">
    <link rel="shortcut icon" href="~/frontEnd/images/blackTram.png" />
    <title>Add Special Offer</title>
    <!--CSS and other files-->
    <link rel="stylesheet" href="~/frontEnd/css/admin-main.css">
    <link rel="stylesheet" href="~/frontEnd/css/bootstrap.min.css">
    <script type='text/javascript' src='https://code.jquery.com/jquery-1.12.0.min.js'></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!--Background Image-->
    <div style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('../../frontEnd/images/white_background.jpg') center center no-repeat; background-size: cover;"></div>
    <!-- Navigation -->
    <!--Container-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <!--Logo-->
            <a class="navbar-brand" href="UserHomePage">
                <div style="padding-left: 20px;"><img src="~/frontEnd/images/blackTram.png" alt="Logo" width="70" height="67"></div><div style="padding-top: 10px;">City Transport</div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-user-info">
        <!--User Container-->
        <div class="user-info">
            <br>
            <h1>Add Special Offer</h1><br>
                                      <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                          <div asp-validation-summary="All" class="text-danger"></div>
                                          <p class="label-name">Transport Number:</p><br>
                                          <input asp-for="@Model.TransportNumber" type="text" value=@Model.TransportNumber class="input" placeholder="@Html.DisplayFor(model => model.TransportNumber)" /><br>
                                          <span asp-validation-for="@Model.TransportNumber" class="text-danger"></span><br>

                                          <div class="drop-down">

                                              <p class="label-name">Transport Type:</p>
                                              <select asp-for="@Model.TransportType" value=@Model.TransportType class="select-css">
                                                  <option value="">TransportType</option>
                                                  <option value="Tram">Tram</option>
                                                  <option value="Bus">Bus</option>
                                                  <option value="Trolley">Trolley</option>
                                                  <option value="Subway">Subway</option>
                                              </select>
                                          </div></br></br>
                                          <p class="label-name">Notification Text:</p><br>
                                          <textarea asp-for="@Model.Message" type="text" value=@Model.Message class="input" placeholder="@Html.DisplayFor(model => model.Message)"></textarea><br><br>
                                          <span asp-validation-for="@Model.Message" class="text-danger"></span><br>
                                          <input asp-for="@Model.StartDate" type="text" value=@Model.StartDate class="input" placeholder="@Html.DisplayFor(model => model.StartDate)" /><br><br>
                                          <span asp-validation-for="@Model.StartDate" class="text-danger"></span><br>
                                          <input asp-for="@Model.EndDate" type="text" value=@Model.EndDate class="input" placeholder="@Html.DisplayFor(model => model.EndDate)" /><br><br>
                                          <span asp-validation-for="@Model.EndDate" class="text-danger"></span><br>
                                          <br>

                                          <div class="drop-down">
                                              <button class="button" type="submit">Send</button>
                                          </div>
                                      </form>
        </div>
    </div>

    <!--JavaScript files-->


    <script type="text/javascript" src="~/frontEnd/javaScript/jquery.slim.js"></script>
    <script type="text/javascript" src="~/frontEnd/javaScript/bootstrap.bundle.min.js"></script>
</body>
</html>