@model CityTransport.Models.AdminModels.AddSpecialOfferModel
<!DOCTYPE html>
<html>
<head>
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
    <meta content="utf-8" http-equiv="encoding">
    <link rel="shortcut icon" href="~/frontEnd/images/blackTram.png" />
    <title>Add Special Offer</title>
    <!--CSS and other files-->
    <link rel="stylesheet" href="~/frontEnd/css/admin-main.css">
    <link rel="stylesheet" href="~/frontEnd/css/bootstrap.min.css">
    <script type='text/javascript' src='https://code.jquery.com/jquery-1.12.0.min.js'></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!--Background Image-->
    <div style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('../../frontEnd/images/white_background.jpg') center center no-repeat; background-size: cover;"></div>
    <!-- Navigation -->
    <!--Container-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <!--Logo-->
            <a class="navbar-brand" href="UserHomePage">
                <div style="padding-left: 20px;"><img src="~/frontEnd/images/blackTram.png" alt="Logo" width="70" height="67"></div><div style="padding-top: 10px;">City Transport</div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-user-info">
        <!--User Container-->
        <div class="user-info">
            <br>
            <h1>Add Special Offer</h1><br>
                                      <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                          <div asp-validation-summary="All" class="text-danger"></div>
                                          <p class="label-name">Special Offer Id:</p><br>
                                          <input asp-for="@Model.SpecialOfferID" type="text" value=@Model.SpecialOfferID class="input" placeholder="@Html.DisplayFor(model => model.SpecialOfferID)" /><br>
                                          <span asp-validation-for="@Model.SpecialOfferID" class="text-danger"></span><br>
                                          <p class="label-name">Offer Name:</p><br>
                                          <input asp-for="@Model.OfferName" type="text" value=@Model.OfferName class="input" placeholder="@Html.DisplayFor(model => model.OfferName)" /><br><br>
                                          <span asp-validation-for="@Model.OfferName" class="text-danger"></span>
                                          <p class="label-name">Offer Description:</p><br>
                                          <input asp-for="@Model.OfferDescription" type="text" value=@Model.OfferDescription class="input" placeholder="@Html.DisplayFor(model => model.OfferDescription)" /><br><br>
                                          <span asp-validation-for="@Model.OfferDescription" class="text-danger"></span>
                                          <p class="label-name">Offer Price:</p><br>
                                          <input asp-for="@Model.OfferPrice" type="text" value=@Model.OfferPrice class="input" placeholder="@Html.DisplayFor(model => model.OfferPrice)" /><br><br>
                                          <span asp-validation-for="@Model.OfferPrice" class="text-danger"></span>

                                          <div class="drop-down">

                                              <p class="label-name">Role:</p>
                                              <select asp-for="@Model.Role" value=@Model.Role class="select-css">
                                                  <option value="">Role</option>
                                                  <option value="Adult">Adult</option>
                                                  <option value="Student">Student</option>
                                                  <option value="University Student">University Student</option>
                                                  <option value="Retired">Retired</option>
                                                  <option value="Parent">Parent</option>
                                              </select>
                                          </div><br><br>
                                         
                                          <div class="drop-down">
                                              <button class="button" type="submit">Save</button>
                                          </div>
                                      </form>
        </div>
    </div>

    <!--JavaScript files-->


    <script type="text/javascript" src="~/frontEnd/javaScript/jquery.slim.js"></script>
    <script type="text/javascript" src="~/frontEnd/javaScript/bootstrap.bundle.min.js"></script>
</body>
</html>